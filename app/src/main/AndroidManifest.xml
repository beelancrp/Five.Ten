<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.beelan.fiveten" >

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.LoginActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".activities.PayActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".activities.TransactionActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".activities.ExchangeActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".activities.MoreActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".activities.VuvodActivity"
            android:windowSoftInputMode="stateHidden"/>
    </application>

</manifest>
