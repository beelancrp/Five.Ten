<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:color="@android:color/black" >
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <solid android:color="#3366FF66" />
                    <stroke
                        android:width="3dp"
                        android:color="#88008800" />
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp" />
                </shape>
            </item>
            <item android:width="24dp" android:height="24dp">
                <bitmap android:dither="true" android:src="@drawable/logo_u_k_inter_invest_krv_copy" android:gravity="center_vertical|right"/>
            </item>
        </layer-list>
    </item>
